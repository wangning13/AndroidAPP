<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_headerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.QuestionDetailActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/context_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEDEDE"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/quetion_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1dp"
                android:maxLines="2"
                android:textColor="#1F1F1F"
                android:textSize="16sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <com.akari.quark.ui.view.CircleImageView
                    android:id="@+id/field_main_avatar"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/head"
                    app:shape_mode="circle" />
                <TextView
                    android:id="@+id/field_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/field_main_avatar"
                    android:layout_alignTop="@+id/field_main_avatar"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="1dp"
                    android:text="声学"
                    android:textSize="13dp"
                    android:textColor="#707070"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/field_main_avatar"
                    android:layout_below="@+id/field_name"
                    android:layout_marginTop="11dp"
                    android:layout_alignLeft="@+id/field_name"
                    android:text="声学是物理学分支学科之一，是研究媒质中机械波的产生、传播、接收和效应的科学。媒质包括物质各态（固体、液体和气体等），可以是弹性媒质也可以是非弹性媒质。机械波是指质点运动变化（包括位移、速度、加速度中某一种或几种的变化）的传播现象。声波是机械波的一种。声学是物理学分支学科之一，是研究媒质中机械波的产生、传播、接收和效应的科学。媒质包括物质各态（固体、液体和气体等），可以是弹性媒质也可以是非弹性媒质。机械波是指质点运动变化（包括位移、速度、加速度中某一种或几种的变化）的传播现象。声波是机械波的一种。"
                    android:textSize="10dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/focus_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#173A52"
                    android:textSize="14sp"
                    android:textStyle=""
                    android:text="312人关注"/>

                <TextView
                    android:id="@+id/answer_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textColor="#173A52"
                    android:textSize="14sp"
                    android:text="31在这个领域"/>
                <Button
                    android:id="@+id/concern_button"
                    android:layout_width="70dp"
                    android:layout_height="27dp"
                    android:background="@drawable/button_shape"
                    android:text="关注"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:id="@+id/blank_space"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/context_card_view"/>
    <android.support.v7.widget.CardView
        android:id="@+id/all_question_label"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#DEDEDE"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_below="@+id/blank_space">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="全部问题"
            android:textColor="#2D2D2D"
            android:textSize="11dp"/>
    </android.support.v7.widget.CardView>
    <View
        android:id="@+id/blank_space2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/all_question_label"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.CardView>
</RelativeLayout>