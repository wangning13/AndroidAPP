<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#DEDEDE"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/answer_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/answer_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无标签"
            android:ellipsize="end"
            android:textColor="#3C84C1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/answer_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="1dp"
            android:maxLines="2"
            android:text="为什么国内的Android APP都不愿意遵循Google推出的Material Design设计规范？"
            android:ellipsize="end"
            android:textColor="#1F1F1F"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/surf_count"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="0次浏览"
                android:textColor="#6B6B6B"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/attention_count"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="0人关注"
                android:textColor="#6B6B6B"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/answer_count"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="0个回答"
                android:textColor="#6B6B6B"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/wanna_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_img"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:src="@drawable/ic_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="我来回答"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>